<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#2196F3"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="20dp"
        android:minHeight="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
          >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/textView5"
                android:textColor="#060606"
                android:layout_marginTop="41dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/showicon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#FFF703B6"
                android:gravity="top"
                android:textSize="18sp"
                android:id="@+id/textView8"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_below="@+id/showicon"
                android:layout_alignEnd="@+id/showicon"
                android:layout_alignStart="@+id/showicon" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:textColor="#FFF703B6"
                android:textSize="38sp"
                android:id="@+id/textView9"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView8" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:id="@+id/showicon"
                android:layout_below="@+id/textView5"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:src="@drawable/wind"
                android:id="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"
                android:layout_alignBottom="@+id/textView7" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:textSize="18sp"
                android:textColor="#FFF703B6"
                android:id="@+id/textView7"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_below="@+id/textView9" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="16dp"
        android:minHeight="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Pressure"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="18sp"
            android:id="@+id/textView2"
            android:layout_marginLeft="30dp"
            android:gravity="right"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="74dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#FFF703B6"
            android:textSize="18sp"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_toStartOf="@+id/textView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF703B6"
            android:gravity="left"
            android:id="@+id/textView4"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Ground Level"
            android:textSize="18sp"
            android:id="@+id/textViewGroundLevel"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/textView10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sea Level"
            android:textSize="18sp"
            android:id="@+id/textViewSunSet"
            android:layout_alignTop="@+id/textViewGroundLevel"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#FFF703B6"
            android:textSize="18sp"
            android:layout_below="@+id/textViewGroundLevel"
            android:id="@+id/textView10"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFF703B6"
            android:gravity="left"
            android:id="@+id/textView12"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView10"
            android:layout_toEndOf="@+id/textViewSunSet"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignStart="@+id/textViewSunSet" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>