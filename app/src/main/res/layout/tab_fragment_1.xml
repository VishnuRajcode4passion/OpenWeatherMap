<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#faf9f9"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="5dp"
        android:background="#f1f0f0"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        android:minHeight="250dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
          >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:textSize="25sp"
                android:id="@+id/textView5"
                android:textColor="#060606"
                android:layout_marginTop="42dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:gravity="left|center"
                android:textColor="#3e3d3e"
                android:textSize="30sp"
                android:id="@+id/textView9"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_alignTop="@+id/showicon"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/showicon" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:id="@+id/showicon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:id="@+id/windicon"
                android:src="@drawable/wind"
                android:layout_below="@+id/showicon"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#1d1b1c"
                android:gravity="center"
                android:paddingLeft="20sp"
                android:id="@+id/textView7"
                android:layout_alignBottom="@+id/windicon"
                android:layout_alignEnd="@+id/showicon"
                android:layout_below="@+id/showicon"
                android:layout_alignStart="@+id/showicon" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#f1efef"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        android:minHeight="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Pressure:"
            android:gravity="left"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity:"
            android:textSize="18sp"
            android:id="@+id/textView2"
            android:layout_marginLeft="30dp"
            android:gravity="left"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp"
            android:layout_above="@+id/textView3"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#302f30"
            android:gravity="left"
            android:paddingLeft="30sp"
            android:id="@+id/textView4"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Pressure:"
            android:gravity="left"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Sealevel"
            android:gravity="left"
            android:textSize="18sp"
            android:id="@+id/textr"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="30sp"
            android:textColor="#292829"
            android:textSize="18sp"
            android:id="@+id/tvsunrise"
            android:layout_alignEnd="@+id/textView3"
            android:layout_below="@+id/textr"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Groundlevel"
            android:gravity="end"
            android:textSize="18sp"
            android:id="@+id/texts"
            android:layout_alignTop="@+id/textr"
            android:layout_alignEnd="@+id/textView2"
            android:layout_above="@+id/tvsunrise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#1d1c1d"
            android:gravity="left"
            android:paddingLeft="30sp"
            android:id="@+id/tvsunset"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tvsunrise"
            android:layout_alignStart="@+id/texts"
            android:layout_below="@+id/texts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="30sp"
            android:textColor="#282728"
            android:textSize="18sp"
            android:id="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/texts" />


    </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>